<div id="product" class="card">
  <h1 class="title"><%= @product.name %></h1>
  <div class="row">
    <div class="column">
      <table class="table">  
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th style='text-align: center;'>Image</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Creator</th>
        </tr>
        <tr>
          <td><%= @product.name %></td>
          <td><%= @product.price %></td>
          <td><%= @product.description %></td>
          <td><%= image_tag(@product.image, size: "300x168") %></td>
          <td><%= @product.created_at %></td>
          <td><%= @product.updated_at %></td>
          <td><%= link_to @product.admin.name, admin_path(@product.admin), class: 'admin'%></td>
        </tr>
      </table>
    </div>
  </div>
  <div>
    <%= link_to "Back to products", products_path, class: "button button2" %>
  </div>
</div>