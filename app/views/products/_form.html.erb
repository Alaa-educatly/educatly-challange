<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-wrapper">

    <div>
      <%= form.text_field :name, placeholder: "Product name", class: "input-box", :required => true %>
    </div>

    <div>
      <%= form.number_field :price, step: :any, placeholder: "Product price", class: "input-box", :required => true%>
    </div>

    <div>
      <%= form.text_area :description, placeholder: "Product description", class: "input-box", :required => true %>
    </div>

    <div>
      <%= form.label :image %>
      <%= form.file_field :image, :required => true %>
    </div>
  </div>


    <div>
      <%= form.submit :class => 'button button1' %>
    </div>
<% end %>